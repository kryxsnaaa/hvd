    <script>
        function reveal() {
            // Hide the button and instruction
            document.getElementById('heart-btn').style.display = 'none';
            document.getElementById('instruction').style.display = 'none';

            // Show and fade in the photo
            const photo = document.getElementById('photo-frame');
            photo.style.display = 'block';
            setTimeout(() => photo.classList.add('fade-in'), 100);

            // Show and fade in the letter after 2 seconds
            const letter = document.getElementById('letter');
            setTimeout(() => {
                letter.style.display = 'block';
                setTimeout(() => letter.classList.add('fade-in'), 100);
            }, 2500);
        }
    </script>
